<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sot_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <label for="type_id"/>
                <div name="order_type" class="o_row">
                    <field name="type_id" required="1"/>
                    <button type="object" name="match_order_type"
                            string="Find by rule" class="oe_inline" icon="fa-gears"
                            states="draft,sent"/>
                </div>
            </field>

            <!-- Send type_id to product selectors so they can customize based on it. -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="attributes">
                <attribute name="context" operation="python_dict"
                    key="sale_type">parent.type_id</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']"
                position="attributes">
                <attribute name="context" operation="python_dict"
                    key="sale_type">parent.type_id</attribute>
            </xpath>

        </field>
    </record>
</odoo>
